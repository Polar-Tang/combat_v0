local CooldownController = {}
CooldownController.__index = CooldownController

function CooldownController.new(char: Model, serviceBag)
	-- Binder constructor
	local self = setmetatable({}, CooldownController)

	self.parent = char
	self.currentCD = nil
	self._cooldown = nil
	self._inst = nil
	self._serviceBag = serviceBag
	return self
end
