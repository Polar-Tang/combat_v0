local require = require(script.Parent.loader).load(script)

local CooldownController = require("CooldownController")

local BaseAbility = {}
BaseAbility.__index = BaseAbility

function BaseAbility.new(config)
	local _maxCombo = assert(config._maxCombo, "_maxCombo is required")
	return setmetatable({
		name = config.name,
		cooldown = config.cooldown or 0,
		damage = config.damage or 0,
    	_cooldownController = CooldownController.new(config.char, config._serviceBag),
		_lastSwing = 0,
		_maxCombo = _maxCombo
	}, BaseAbility)
end

function BaseAbility:Execute(char)
	error("Execute must be overridden in subclass")
end

return BaseAbility
